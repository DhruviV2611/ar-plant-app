{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "jsx": "react-native",  
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "module": "esnext",
    "target": "esnext",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src", "App.tsx", "index.tsx"]
}
